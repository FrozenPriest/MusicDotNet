@model IEnumerable<RazorWebApplication.Models.ArtistModel>

@{
    ViewBag.Title = "All artists";
    Layout = "_Layout";
}

<h2>Artists:</h2>

<div class="container">
    <div class="row">
        <div class="col">
            <b>Name</b>
        </div>
        <div class="col">
            <b>Image url</b>
        </div>
    </div>
    @foreach (var artistModel in this.Model)
    {
        <div class="row">
            <div class="col">
                @Html.ActionLink(artistModel.Name, "Details", new {modelId = artistModel.Id}, null)
            </div>
            <div class="col">
                @artistModel.ImageUrl
            </div>
        </div>
    }
</div>